<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#283478"
                android:src="@drawable/baseline_keyboard_backspace_24" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="#283478"
                android:fontFamily="@font/montserrat_black"
                android:gravity="center"
                android:text="EVENTS@UKM"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/btn_nope"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#283478"
                android:src="@drawable/ic_android_black_24dp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="CIPTA PROGRAM"
                android:textColor="#283478"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Isi Nama Program" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="#DCD9D9"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Nama Program"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Pilih Tarikh Mula Program" />

            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#DCD9D9"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Tarikh (dd/mm/yyyy)"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Pilih Masa Program Bermula" />

            <EditText
                android:id="@+id/et_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#DCD9D9"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Masa"
                android:inputType="time" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Isi Harga Yuran Program (Jika Ada)" />

            <EditText
                android:id="@+id/et_fee"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#DCD9D9"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Yuran Program "
                android:inputType="text" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Isi Maklumat Program" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="#DCD9D9"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Maklumat Program"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Pilih Jenis Program" />

            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:autofillHints="Sport"
                android:background="#DCD9D9" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Isi Lokasi Program" />

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="#DCD9D9"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Lokasi Program"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Adakah Program Anda Menyediakan Merit iStar?" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#DCD9D9"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Merit iStar?"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:id="@+id/rb_istarmerit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#DCD9D9">

                        <RadioButton
                            android:id="@+id/rb_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#DCD9D9"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Sedia" />

                        <RadioButton
                            android:id="@+id/rb_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#DCD9D9"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Tidak sedia" />
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Bank Account (QR)" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Poster Program" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_qrpayment"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/qrpay"
                        tools:srcCompat="@drawable/qrpay" />

                    <ImageView
                        android:id="@+id/img_programimage"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/act2"
                        tools:src="@drawable/act2"
                        tools:srcCompat="@drawable/act2" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Muat Naik Poster Program dan QR Bank Bagi Tujuan Pembayaran Yuran" />

            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4AB173"
                android:fontFamily="@font/montserrat_medium"
                android:text="CIPTA " />
        </LinearLayout>
    </ScrollView>

</LinearLayout>